					"name": "Create token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status is 200\", () => pm.response.to.have.status(200));",
									"",
									"// Only parse JSON if content-type looks like JSON",
									"const ct = (pm.response.headers.get(\"Content-Type\") || \"\").toLowerCase();",
									"if (ct.includes(\"application/json\")) {",
									"  let json;",
									"  try {",
									"    json = pm.response.json();",
									"  } catch (err) {",
									"    pm.test(\"Auth response must be valid JSON\", () => { throw err; });",
									"  }",
									"",
									"  pm.test(\"Token present\", () => {",
									"    pm.expect(json).to.have.property(\"token\");",
									"    pm.expect(json.token).to.be.a(\"string\").and.not.empty;",
									"  });",
									"",
									"  pm.environment.set(\"token\", json.token);",
									"} else {",
									"  pm.test(\"Auth response is JSON\", () => {",
									"    pm.expect(false, \"Auth response Content-Type was not application/json: \" + pm.response.text()).to.be.true;",
									"  });",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
